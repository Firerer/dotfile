set page-padding 1
set recolor-darkcolor "#f8f8f2"
set recolor-lightcolor "#1b1b1b"
set sandbox none
set scroll-page-aware true
set selection-clipboard clipboard
set statusbar-h-padding 0
set statusbar-v-padding 0

map <C-i> zoom in
map <C-o> zoom on
map t exec pdftotext $FILE "$FILE".txt

map j scroll half-down
map k scroll half-up
map <C-j> scroll down
map <C-k> scroll up

map D toggle_page_mode
map r reload
map R rotate
map i recolor
map P adjust_window best-fit
map W adjust_window width

